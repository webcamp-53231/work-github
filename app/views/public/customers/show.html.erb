<div class="container p-3">
 <div class="row">
  <div class="col">
   <h1>会員情報</h1>
   <table class="table">
    <tr>
    <th>氏名</th>  
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>

    <tr>
    <th>カナ</th>  
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td> 
    </tr>

    <tr>
    <th>郵便番号(ハイフン無し)</th>  
    <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
    <th>住所</th>  
    <td><%= @customer.address %></td> 
    </tr>

    <tr>
    <th>電話番号</th>  
    <td><%= @customer.telephone_number %></td>
    </tr>

    <tr>
    <th>メールアドレス</th>  
    <td><%= @customer.email %></td>
    </tr>
   </table>
   <%= link_to '注文履歴一覧', orders_path, class:"btn btn-outline-dark" %>
   <%= link_to '会員情報編集', customers_edit_path, class:"btn btn-outline-dark" %>
  </div>
 </div>
</div>