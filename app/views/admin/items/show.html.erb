<div class="container p-3">
 <h1>商品詳細(管理者)</h1>
 <div class="row">
  <div class="col-6">
   <%= image_tag @item.get_image(400,400) %>
  </div>
  <div class="col-6">
   <h4>商品名</h4>
   <p><%= @item.name %></p>
   <h4>商品詳細</h4>
   <p><%= @item.introduction %></p>
   <h4>価格(税込)</h4>
   <p><%= number_to_currency(@item.price* 1.1,precision: 0) %></p>
   <%= link_to "詳細変更", edit_admin_item_path(@item), class: "btn btn-outline-success" %>
  </div>
 </div>
</div>