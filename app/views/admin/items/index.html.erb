<div class="container p-3">
 <div class="row">
   <div class="col">
     <div class="col-sm-4 mr-sm-auto"><h1>商品一覧</h1><%= link_to "商品新規登録", new_admin_item_path, class:" btn btn-outline-dark" %></div>
     <table class="table">
     <thead>
      <tr>
      <th>商品ID</th>
      <th>商品写真</th>
      <th>商品名</th>
      <th>価格</th>
      <th></th>
      </tr>
     </thead>
     <% @items.each do |item| %>
      <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item) do %><%= image_tag item.get_image(100,100) %><% end %></td>
      <td><%= link_to admin_item_path(item) do %><%= item.name %><% end %></td>
      <td><%= number_to_currency(item.price, strip_insignificant_zeros: true) %></td>
      <td><%= link_to "変更", edit_admin_item_path(item), class: "btn btn-sm btn-success" %></td>
      </tr>
     <% end %>
     </table> 
  </div>
 </div>
</div>