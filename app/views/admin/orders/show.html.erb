<div class="container p-3">
 <div class="row">
  <div class="col">
   <h1>注文履歴詳細</h1>
    <table class="table">
     <tr>
     <th>購入者</th>
     <td></td>
     <td><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
     </tr>
  
     <tr>
     <th>注文日</th>
     <td></td>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
     </tr>   
  
     <tr>
     <th>配送先</th>
     <td></td>
     <td>〒<%= @order.postal_code %> <%= @order.address %><br>
         <%= @order.name %><br></td>
     </tr>   

     <tr>
     <th>支払い方法</th>
     <td></td>
     <td><%= @order.payment_method_i18n %></td>
     </tr>   
  
     <tr>
     <th>商品合計</th>
     <td></td>
     <td><%= number_to_currency(@order.total_payment-@order.shipping_cost) %></td>
     </tr>   
   
     <tr>
     <th>送料</th>
     <td></td>
     <td><%= number_to_currency(@order.shipping_cost) %></td>
     </tr>
     
     <tr>
     <th>ご請求額合計</th>
     <td></td>
     <td><%= number_to_currency(@order.total_payment) %></td>
     </tr> 
    </table>
    <table class="table">
     <tr>
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
     </tr>
     <% @order.order_details.each do |order_detail| %>
     <tr>
     <td><%= order_detail.item.name %></td>
     <td><%= number_to_currency(order_detail.item.price*1.1,precision: 0) %></td>
     <td><%= order_detail.amount %></td>
     <td><%= number_to_currency(order_detail.amount*order_detail.item.price,precision: 0) %></td>
     </tr>
     <% end %>
    </table>
   </div>
 </div>
</div>