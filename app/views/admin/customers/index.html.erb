<div class="container p-3">
 <div class="row">
  <div class="col">
   <h1>会員一覧</h1>
    <table class="table">
     <thead>
     <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>会員ステータス</th>
     </tr>
     </thead>
     <% @customers.each do |customer| %>
     <tr>
     <td><%= customer.id %></td>
     <td><%= link_to admin_customer_path(customer) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
     <td><%= customer.email %></td>
     <td><%= customer.is_active ? '有効' : '退会済み' %></td>
     </tr>
     <% end %>
    </table> 
  </div>
 </div>
</div>