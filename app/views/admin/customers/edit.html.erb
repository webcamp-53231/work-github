<div class="container p-3">
 <div class="row">
  <div class="col">
   <h1>会員情報編集</h1>
   <%= render "public/shared/error_messages", resource: @customer %>
   <%= form_with model: @customer ,url:admin_customer_path do |f| %>
   <table>
    <tr>
    <th>名前</th>
    <td>(姓)</td>  
    <td><%= f.text_field :last_name, autofocus: true, placeholder:"姓"%></td>  
    <td>(名)</td>
    <td><%= f.text_field :first_name, autofocus: true, placeholder:"名"%></td>  
    </tr>
  
    <tr>
    <th>フリガナ</th>
    <td>(セイ)</td>
    <td><%= f.text_field :last_name_kana, autofocus: true, placeholder:"セイ"%></td>
    <td>(メイ)</td>
    <td><%= f.text_field :first_name_kana, autofocus: true, placeholder:"メイ"%></td>
    </td>
    </tr>
   
    <tr>
    <th>郵便番号(ハイフン無し)</th>
    <td></td>
    <td><%= f.text_field :postal_code, autofocus: true, placeholder:"0000000"%></td>
    </tr>
   
    <tr>
    <th>住所</th>
    <td></td>
    <td><%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0"%></td>
    </tr>
  
    <tr>
    <th>電話番号(ハイフン無し)</th>
    <td></td>
    <td><%= f.text_field :telephone_number, autofocus: true, placeholder:"00000000000"%>
    </td>
    </tr>
  
    <tr>
    <th>メールアドレス</th>
    <td></td>
    <td><%= f.text_field :email, autofocus: true, placeholder:"sample@example.com"%></td>
    </tr>
   </table>
   <p><%= f.radio_button :is_active, true %>有効  |  <%= f.radio_button :is_active, false %>退会</p>
   <%= f.submit "変更を保存", class:"btn btn btn-outline-success" %>
   <% end %>

  </div>
 </div>
</div>
